
@{
    ViewBag.Title = "Index";
}

<h3 class="text-center m-3">Lista de Compras</h3>

<div class="row">
    <div class="col-12">
        <a href="@Url.Action("Cadastro")" class="btn btn-outline-primary float-right mt-3 mb-3">
            <i class="fa fa-save"> Nova Compra</i>
        </a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table table-bordered table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Código</th>
                    <th>Cartão de Crédito</th>
                    <th>Valor</th>
                    <th>Data de Compra</th>
                </tr>
            </thead>

            <tbody>
                @foreach (Model.Compra compra in ViewBag.Compras)
                {

                    <tr>
                        <th>@compra.Id</th>
                        <th>@compra.CartaoCredito.Numero</th>
                        <th>@compra.Valor</th>
                        <th>@compra.DataCompra</th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

