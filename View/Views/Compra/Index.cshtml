
@{
    ViewBag.Title = "Index";
}

<h3> Lista de Compras</h3>
<div class="row">
    <div class="col-10 offset-1 mb-3">
        <a class="btn btn-primary float-right"
           href="@Url.Action("Cadastro")">
            <i class="fas fa-plus"></i> Nova Compra
        </a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Código</th>
                    <th>Cartão de Crédito</th>
                    <th>Valor</th>
                    <th>Data de Compra</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Model.Compra compra in ViewBag.Compras)
                {
                    <tr>
                        <th>@compra.Id</th>
                        <th>@compra.CartaoCredito</th>
                        <th>@compra.Valor</th>
                        <th>@compra.DataCompra</th>
                        <td>
                            <a href="@Url.Action("Editar" , new { Id = compra.Id})" class="btn btn-primary">
                                <i class="fas fa-pen"></i> Editar
                            </a>

                            <a href="@Url.Action("Apagar" , new {Id = compra.Id})" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Apagar
                            </a>
                        </td>

                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Código</th>
                    <th>Cartão de Crédito</th>
                    <th>Valor</th>
                    <th>Data de Compra</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

