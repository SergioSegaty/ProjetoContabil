
@{
    ViewBag.Title = "Index";
}

<h3>Conta Receber</h3>

<div class="row">
    <div class="col-12 mb-3">

        <a class="btn btn-primary float-right" href="@Url.Action("Cadastro")">
            <i class="fas fa-plus"></i> Nova Conta Receber
        </a>
    </div>

<div class="row">
    <div class="col-12">
        <table class="table table-striped table-bordered">

            <thead class="thead-dark">
                <tr>
                    <th>Nome</th>
                    <th>Data Pagamento</th>
                    <th>Valor</th>
                </tr>
            </thead>
            <tbody>
            @foreach(Model.ContaReceber contaReceber in ViewBag.contasReceber)
            {
                <tr>
                    <th>@contaReceber.Id</th>
                    <th>@contaReceber.Nome</th>
                    <td>
                        <a href="@Url.Action("Editar", new { Id = contaReceber.Id })" class="btn btn-danger">
                            <i class="fas fa-pen"></i> Editar
                        </a>

                        <a href="@Url.Action("Apagar", new {Id = contaReceber.Id})" class="btn btn-danger">
                        </a>
                    </td>
                </tr>
            }
            </tbody>
            <tfoot class="thead-dark">
                <tr>
                    <th>Nome</th>
                    <th>Data Pagamento</th>
                    <th>Valor</th>
                </tr>

            </tfoot>
        </table>
    </div>
</div>

</div>

