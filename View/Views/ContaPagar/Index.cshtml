
@{
    ViewBag.Title = "Index";
}

<h3 class="text-center mb-3 mt-3">Tabela de Contas a Pagar</h3>

<div class="row">
    <div class="col-12 mb-3">

        <a class="btn btn-primary float-right" href="@Url.Action("Cadastro")">
            <i class="fas fa-plus"></i> Nova Conta Pagar
        </a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table table-striped table-bordered table-hover">

            <thead class="thead-dark">
                <tr>
                    <th>Código</th>
                    <th>Titulo</th>
                    <th>Cliente</th>
                    <th>Valor</th>
                    <th>Data de Pagamento</th>
                    <th>Data de Vencimento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Model.ContaPagar contaPagar in ViewBag.ContasPagar)
                {
                    <tr>
                        <td>@contaPagar.Id</td>
                        <td>@contaPagar.Nome</td>
                        <td>@contaPagar.Cliente.Nome</td>
                        <td>@contaPagar.Valor</td>
                        <td>@contaPagar.DataPagamento.ToShortDateString()</td>
                        <td>@contaPagar.DataVencimento.ToShortDateString()</td>
                        <td>
                            <a href="@Url.Action("Editar", new { Id = contaPagar.Id })" class="btn btn-outline-primary">
                                <i class="fa fa-pen"></i> Editar
                            </a>

                            <a href="@Url.Action("Apagar", new {Id = contaPagar.Id})" class="btn btn-outline-danger">
                                <i class="fa fa-trash"> Deletar</i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot class="thead-dark">
                <tr>
                    <th>Nome</th>
                    <th>Titulo</th>
                    <th>Cliente</th>
                    <th>Valor</th>
                    <th>Data de Pagamento</th>
                    <th>Data de Vencimento</th>
                    <th>Ação</th>
                </tr>

            </tfoot>
        </table>
    </div>
</div>


