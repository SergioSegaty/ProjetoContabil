
@{
    ViewBag.Title = "Index";
}

<h3 class="text-center mt-2">Tabela de Clientes</h3>

<div class="row">
    <div class="col-12 mb-2">
        <a class="btn btn-outline-primary float-right" href="@Url.Action("Cadastro")">
            Novo Cliente
        </a>
    </div>
</div>

<div class="row">
    <div class="col-12">

        <table class="table table-light table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Código</th>
                    <th>Contabilidade</th>
                    <th>Nome</th>
                    <th>Ação</th>
                </tr>

            </thead>


            @foreach (Model.Cliente cliente in ViewBag.Clientes)
            {
                <tr>
                    <th>@cliente.Id</th>
                    <th>@cliente.Contabilidade.Nome</th>
                    <th>@cliente.Nome</th>
                    <th>
                        <a href="@Url.Action("Editar", new { id = cliente.Id})" class="btn btn-outline-primary">
                            <i class="fa fa-pen"></i> Editar
                        </a> 
                        <a href="@Url.Action("Apagar", new { id = cliente.Id})" class="btn btn-outline-danger">
                            <i class="fa fa-trash"></i> Apagar
                        </a>
                    </th>
                </tr>
            }
        </table>

    </div>
</div>
