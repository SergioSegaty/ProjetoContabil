
@{
    ViewBag.Title = "Editar";
}

<h3 class="text-center m-1">Editar Contabilidade</h3>

<form action="@Url.Action("Update")" method="post">
    <div class="row">
        <div class="col-12">
            <label for="campo-nome">Nome</label>
            <input type="text" name="nome" id="campo-nome" class="form-control"
                   value="@ViewBag.Contabilidade.Nome"/>
            <input type="hidden" name="id" value="@ViewBag.Contabilidade.Id"/>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <button class="btn btn-outline-success m-1 float-right" type="submit">
            <i class="fas fa-save"></i> Salvar</button>
        </div>
    </div>

</form>

